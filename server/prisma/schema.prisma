generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  // @@map("products") // DB table will be named "products"
  id     Int     @id @default(autoincrement())
  name   String
  price  Float
  cart   cartItems[]
  receipt Receipt[]
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  cart   cartItems[]
  receipt Receipt[]
}

model cartItems{
  id         Int       @id @default(autoincrement())
  userId     Int
  productId  Int
  quantity   Int
  user       User      @relation(fields: [userId], references: [id])
  product    Products   @relation(fields: [productId], references: [id])
  @@unique([userId, productId])
}

model Receipt {
  id         Int       @id @default(autoincrement())
  userId     Int
  productId  Int
  quantity   Int
  price      Float
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id])
  product    Products  @relation(fields: [productId], references: [id])
}